{
  "version": 2,
  "name": "portfolio-presentation",
  "builds": [
    {
      "src": "api/tts.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/speak.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/main/resources/templates/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/main/resources/static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/tts", "dest": "api/tts.js" },
    { "src": "/api/speak", "dest": "api/speak.js" },
    { "src": "/", "dest": "src/main/resources/templates/index.html" },
    { "src": "/(.*)", "dest": "src/main/resources/templates/$1" }
  ],
  "env": {
    "GOOGLE_PROJECT_ID": "@google_project_id",
    "GOOGLE_CLIENT_EMAIL": "@google_client_email",
    "GOOGLE_PRIVATE_KEY": "@google_private_key"
  }
}
